{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".expo/types/**/*.ts",
    ".eslintrc.js",
    "tailwind.config.js",
    "expo-env.d.ts",
    "constants/colors.js"
  ],
  "exclude": ["**/node_modules"]
}
